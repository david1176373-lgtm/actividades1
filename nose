#include <stdio.h>
void cuadroporvalor(int n){
	n = n * n;
	printf("[cuadradoporvalor] n=%d\n",n);
}
void cuadroporreferencia(int *n){
	*n =(*n) * (*n);
	printf("[cuadradoporreferencia] *n =%d\n", *n);
	
}
int main(){
	int a =3, b = 3;
	printf("antes de cuadraporvalor: a = %d\n", a);
	cuadroporvalor(a);
	printf("despues de cuadroporvalor: a = %d\n", a);
	
	printf("antes de cuadraporreferencia: b = %d\n", b);
	cuadroporreferencia(&b);
	printf("despues de cuadroporreferencia: b = %d\n", b);
	
	return 0;
}
